<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:gravity="center"
    android:orientation="vertical">

    <Button
        android:id="@+id/button_open_beacon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Beacon" />


  <Button
    android:id="@+id/button_open_beacon_to_search"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Open Beacon to search results" />

    <Button
        android:id="@+id/button_login_beacon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login (basic mode)" />

    <Button
        android:id="@+id/button_logout_beacon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout" />

</LinearLayout>
