<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  package="net.helpscout.samples.beacon.kotlin">

  <!-- appComponentFactory had to be defined as there is a sister project that uses AndroidX -->
  <application
    android:name=".MainApplication"
    android:allowBackup="true"
    android:appComponentFactory="android.support.v4.app.CoreComponentFactory"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:networkSecurityConfig="@xml/debug_trust_user_certs"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/AppTheme"
    tools:ignore="GoogleAppIndexingWarning"
    tools:replace="android:appComponentFactory">

    <activity
      android:name="net.helpscout.samples.beacon.kotlin.MainActivity"
      android:label="@string/app_name">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />

        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
  </application>

</manifest>
